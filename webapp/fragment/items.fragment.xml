<core:FragmentDefinition xmlns:tnt="sap.tnt" xmlns:cards="sap.f.cards" xmlns:form="sap.ui.layout.form" xmlns:m="sap.m" xmlns:core="sap.ui.core"     xmlns="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.ui.unified"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form" 
>   
<Table id="tblCustomerPreference"
                ariaLabelledBy="title"
                rows="{CustModel>/}" 
                enableSelectAll="false"
                selectionMode="Single" 
                selectionBehavior="RowSelector"               
                enableColumnFreeze="true">
                <extension>
                    <m:OverflowToolbar style="Clear">
                        <m:Title id="title" text="Customer Details"/>
                        <m:ToolbarSpacer/>
                        <m:Button
							id="btnCreate" text="Create"
							press="onCreateRecord"/>
                    </m:OverflowToolbar>
                </extension>
                <columns>
                    <Column
                        width="11rem">
                        <m:Label text="Client" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text text="{CustModel>mandt}"/>
                        </template>
                    </Column>
                    <Column
                        width="11rem">
                        <m:Label text="Business Partner" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text text="{CustModel>Gpart}"/>
                        </template>
                    </Column>   
                    <Column
                        width="11rem">
                        <m:Label text="Object Type" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text text="{CustModel>Objtype}"/>
                        </template>
                    </Column>  
                    <Column
                        width="11rem">
                        <m:Label text="Key" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text text="{CustModel>Objkey}"/>
                        </template>
                    </Column> 
                    <Column
                        width="11rem">
                        <m:Label text="Corresp. Role" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text text="{CustModel>CorrRole}"/>
                        </template>
                    </Column> 
                    <Column
                        width="11rem">
                        <m:Label text="Corresp. Type" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text text="{CustModel>Cotyp}"/>
                        </template>
                    </Column>   
                    <Column
                        width="11rem">
                        <m:Label text="Disp. Control" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text text="{CustModel>Sendcontrol}"/>
                        </template>
                    </Column>   
                    <Column
                        width="11rem">
                        <m:Label text="Sequence Number" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text text="{CustModel>Consnumber}"/>
                        </template>
                    </Column>  
                    <Column
                        width="11rem">
                        <m:Label text="Status" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text text="{CustModel>Status}"/>
                        </template>
                    </Column>   
                    <Column
                        width="11rem">
                        <m:Label text="Valid From" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text text="{CustModel>ValidFrom}"/>
                        </template>
                    </Column>    
                    <Column
                        width="11rem">
                        <m:Label text="Valid To" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text text="{CustModel>ValidTo}"/>
                        </template>
                    </Column> 
                    <Column
                        width="11rem">
                        <m:Label text="Create Date" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text text="{CustModel>CreatedDate}"/>
                        </template>
                    </Column>  
                    <Column
                        width="11rem">
                        <m:Label text="Create By" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text text="{CustModel>CreatedBy}"/>
                        </template>
                    </Column>
                    <Column
                        width="11rem">
                        <m:Label text="Changed Date" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text text="{CustModel>ChangedDate}"/>
                        </template>
                    </Column>
                    <Column
                        width="11rem">
                        <m:Label text="Changed By" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text text="{CustModel>ChangedBy}"/>
                        </template>
                    </Column>          
                </columns>
        </Table> 
</core:FragmentDefinition>