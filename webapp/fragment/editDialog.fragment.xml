<core:FragmentDefinition 
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form">
	<Dialog id="editDialog" title="Communication Preference" class="sapUiSmallMargin" afterClose=".closeDialog">
		<content>
		  <form:SimpleForm editable="true" id="ideditForm">
				<Label text="Business Partner"/>
				<Input
					id="iduBp"
					showSuggestion="true" editable="false">
				</Input>

				<Label text="Object Type"/>
				<Input
					id="iduObjectType"
					showSuggestion="true" editable="false">
				</Input>

				<Label text="Object key"/>
				<Input
					id="iduKey"
					showSuggestion="true" editable="false">
				</Input>

				<Label text="Correspondence Type"/>
				<Input
					id="iduCorrespType"
					showSuggestion="true"  editable="true">
				</Input>
				
				<Label text="Correspondence Role"/>
				<Input
					id="iduCorrespRole"
					showSuggestion="true"  editable="false">
				</Input>				

				<Label text="Delivery Channel"/>
				<Input
					id="iduDeliveryChannel"
					showSuggestion="true"  editable="false">
				</Input>

				<Label text="Delivery Address"/>
				<Input
					id="iduDeliveryAddress"
					showSuggestion="true" editable="true">
				</Input>

				<CheckBox id="chkUStatus" text="Status" selected="true" />
		  </form:SimpleForm>
		</content>
		
		<buttons>
		<Button id="btnUpdate" text="Update" press=".onUpdateDialog" />
		<Button id="btnUCancel" text="Cancel" press=".onCancelDialog" />
		</buttons>
	  </Dialog>
</core:FragmentDefinition>